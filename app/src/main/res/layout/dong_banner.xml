<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custon_background_banner"></androidx.viewpager.widget.ViewPager>
    <RelativeLayout
        android:id="@+id/realativel1"
        android:layout_alignBottom="@id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageviewbanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"></ImageView>

        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="lo yeu mat roi"
            android:textSize="17sp"
            android:id="@+id/textviewtitlebanner"
            android:layout_alignTop="@id/imageviewbanner"
            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout

            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_below="@id/textviewtitlebanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/textviewnoidung"
                android:textColor="@color/white"
                android:text="fdfdf"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bacround_gradient"
    android:id="@+id/fragmenthoso">

    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hello World"
            android:textColor="#ECE3E3"
            android:textSize="25sp"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_user"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btneditimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Chỉnh sửa ảnh"
        android:textColor="@color/black"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:icon="@drawable/ic_edit"
        app:iconTint="#E91E63"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imageviewemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/ic_email"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textviewemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="abc@gmail.com"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/imageviewemail"/>

        <ImageView
            android:id="@+id/imageviewphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/imageviewemail"
            app:srcCompat="@drawable/ic_baseline_phone_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textviewphone"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="04995959596"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/imageviewphone"
            android:layout_below="@+id/textviewemail"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="184dp" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/cirProfileLogoutButton"
            style="@style/loginButton"
            android:layout_below="@+id/textviewphone"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/imageviewphone"
            android:text="Log out"
            app:initialCornerAngle="27dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

    </RelativeLayout>

</LinearLayout>
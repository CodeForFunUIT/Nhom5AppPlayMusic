<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewsearchbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="3dp">
        <ImageView
            android:src="@drawable/ic_music"
            android:scaleType="fitXY"
            android:id="@+id/imageviewSearchbaihat"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textviewSearchtenbaihat"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Ten bai hat"
        android:layout_toRightOf="@id/cardviewsearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewSearchtencasi"
        android:textSize="18sp"
        android:textColor="#6e6d6d"
        android:layout_below="@id/textviewSearchtenbaihat"
        android:text="Ca si"
        android:layout_toRightOf="@id/cardviewsearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


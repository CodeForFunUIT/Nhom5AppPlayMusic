<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/imgplaypause"
        android:layout_toEndOf="@+id/img_notification"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_notification"
        android:layout_toLeftOf="@+id/imgplaypause">

        <TextView
            android:id="@+id/txttitlesong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello word"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/txtsinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mai Anh Nghia"
            android:textColor="@color/black"
            android:textSize="13sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgplaypause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/imgclear"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_pauses"
        android:layout_toLeftOf="@+id/imgclear"
        android:layout_marginRight="10dp" />
    <ImageView
        android:id="@+id/imgclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_clear"
        android:layout_alignParentRight="true" />
</RelativeLayout>